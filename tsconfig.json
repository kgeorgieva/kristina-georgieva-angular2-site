{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": false
    },
    "compileOnSave": false,
    "filesGlob": [
        "client/**/*.ts",
        "server/**/*.ts",
        "gulpfile.ts",
        "tools/**/*.ts",
        "tools/typings/*.d.ts",
        "tools/typings/tsd/tsd.d.ts",
        "!dist/**",
        "!test/**",
        "!.tmp/**",
        "!node_modules/**"
    ]
}
